<%= form_with model:@genre,url:admin_genre_path(@genre.id),local:true do |f| %>
<div class = "row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>ジャンル編集</h2>
     <div class = "form">
       <label for = "inputgenre">ジャンル名</label>
       <%= f.text_field :name, placeholder:"ジャンル名" %>
     </div>
     
     <div class = "form">
       <%= f.submit "変更を保存",class:"btn btn-success" %>
     </div>
    </div> 
</div>
<% end %>