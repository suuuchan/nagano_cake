<%= form_with model:@item, url:admin_items_path, local:true do |f| %>
<div class = "row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
     <h2>商品新規登録</h2>
     <div class = "form">
       <label for = "inputImage">商品画像</label>
       <%= f.attachment_field :image, placeholder:"商品画像" %>
     </div>
     
     <div class = "form">
       <label for = "inputname">商品名</label>
       <%= f.text_field :name, placceholder:"商品名" %>
     </div>
     
     <div class = "form">
       <label for = "inputintroduction">商品説明</label>
       <%= f.text_area :introduction, placceholder:"商品説明" %>
     </div>
     
     <div class = "form">
       <label for = "inputgenre_id">ジャンル</label>
       <%= f.collection_select :genre_id, Genre.all, :id, :name %>
     </div>
     
     <div class = "form">
       <lael for = "inputprice">税抜価格</lael>
       <%= f.text_field :price, placceholder:"１０００" %>
     </div>
     
     <!--<div class = "form">-->
     <!--  <label for = "inputisactive">販売ステータス</label>-->
     <!--</div>-->
   
   <div class = "form">
     <%= f.submit "新規登録", class: "btn btn-success" %>
   </div>
   
  <% end %>
  </div>
</div>

