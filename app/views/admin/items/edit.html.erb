<%= form_with model:@item, url:admin_item_path(@item.id), local:true do |f| %>
<div class = "row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>商品編集</h2>
       <div class = "form">
         <label for = "inputImage">商品画像</label>
         <%= f.attachment_field :image %>
       </div>
       
       <div class = "form">
         <label for = "inputname">商品名</label>
         <%= f.text_field :name %>
       </div>
       
       <div class = "form">
         <label for = "inputintroduction">商品説明</label>
         <%= f.text_area :introduction %>
       </div>
       
       <div class = "form">
         <label for = "inputgenre">ジャンル</label>
         <%= f.collection_select :genre_id, Genre.all, :id, :name %>
       </div>
       
       <div clas = "form">
         <label for = "inputprice">税抜価格</label>
         <%= f.text_field :price %>
       </div>
       
       <div class = "form">
         <%= f.submit "変更を保存する",class: "btn btn-success" %>
       </div>
       <% end %>
  </div>     