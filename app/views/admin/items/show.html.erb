<div class = "row">
   <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
       <h2>商品詳細</h2>
       
       <div class = "form">
            <%= attachment_image_tag @item, :image, :fill, 100, 100, format:"jpeg" %>
       </div>
       
       <div class = "form">
           <laber for = "name">商品名</laber>
           <%= @item.name %>
       </div>

       <div class = "form">
            <label for = "introduction">商品説明</label>
            <%= @item.introduction %>
       </div>
       
       <div class = "form">
            <label for = "price">ジャンル</label>
            <%= @genre.name %>
       </div>

       <div class = "form">
            <label for = "price">税抜価格</label>
            <%= @item.price %>
       </div>

       <div class = "form">
            <%= link_to "編集する",edit_admin_item_path(@item.id), class: "btn btn-success" %>
       </div>
    </div>
</div>

